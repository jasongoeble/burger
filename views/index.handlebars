<h1>Burgers</h1>

<h2>Burgers available to be devoured</h2>

<!-- for the uneaten burgers -->
<ul>
{{#each burger}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured="1"}}
    {{/unless}}
  {{/each}}
</ul>

<!-- for the "devoured" burgers -->

<h2> Burgers already devoured</h2>
<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured="0"}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="name">Burger Name:</label>
    <input type="text" id="name" name="burgerName">
  </div>

  <button type="submit">Add Burger</button>
</form>
